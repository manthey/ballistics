body
  padding 0
  margin 0
.navbar
  border-top 3px double #aaa
  border-bottom 3px double #aaa
  margin 0
  padding 0
  font-weight bold
  font-size 14.4px
  font-family Tahoma,Verdana,Arial,Helvetica,sans-serif
  font-variant small-caps
  line-height 1em
  color #555
  ul
    display inline
    padding 0
    ul
      display none
      float left
      position absolute
      left 0
      z-undex 1
      top 30px
      width 150px
      box-shadow 2px 2px 2px rgba(0,0,0,0.3)
      li
        min-width 150px
      ul
        top 0
        left 100%
  li
    display inline-block
    list-style-type none
    position relative
  li:hover>ul
    display block
    text-decoration none
  a
    padding 5px
    line-height 20px
    display block
    text-decoration none
  a:hover, a:active, a:focus
    text-decoration underline
  ul ul, ul li:hover, ul a:hover
    background #dee2e9
    color #555
  ul ul a:hover
    background #eaeef1
    color #555
  a:active, a:focus
    background #f93
    color #333
  .current > a
    color white
    background #444

#b-header
  width 100%
  overflow hidden
  line-height 0
#b-content
  padding 8px
